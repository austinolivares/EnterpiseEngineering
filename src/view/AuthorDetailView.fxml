<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="First Name" GridPane.halignment="CENTER" />
      <Label text="Last Name" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Label text="Date of Birth" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
      <Label text="Gender" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Label text="Web Site" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
      <Button fx:id="saveAuthor" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSaveAuthorClicked" text="Save" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
      <TextField fx:id="authorFirstName" GridPane.columnIndex="1" />
      <TextField fx:id="authorLastName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="authorWebsite" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <ChoiceBox fx:id="authorGender" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <DatePicker fx:id="authorDateOfBirth" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="deleteAuthor" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onDeleteAuthorClicked" text="Delete" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" percentWidth="75.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints percentHeight="18.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints percentHeight="18.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints percentHeight="18.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints percentHeight="18.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints percentHeight="18.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="30.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
</GridPane>
